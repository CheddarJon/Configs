#
# wm independent hotkeys
#

# terminal emulator
super + Return
	st

# program launcher
super + @space
	dmenu_run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; \
	notify-send "sxhkd restarted"

# reboot / poweroff
super + shift + Delete
	~/.scripts/shtdwn

{_, ctrl +} Print
	name="$(date +%s).png"; \
	file="~/var/screenshots/$name"; \
	maim {_,-s} $file; \
	xclip -selection clipboard -t image/png; < $file; \
	notify-send "Screenshot Taken" "Screenshot $name saved to clipboard"

# dwm
super + {k,j}
	dwmc focusstack {-,+}1

super + {_, shift} + {comma, period}
    dwmc {focusmon, tagmon} {-,+}1

super + {h,l}
	dwmc setmfact {-,+}0.05

super + b
	dwmc togglebar

super + shift + p
	dwmc togglefloating

super + w
	dwmc killclient

super + shift + q
	dwmc quit

super + {t,f,m}
	dwmc setlayoutex {0,1,2}

super + {_,ctrl +}{_,shift +} {1-9}
	dwmc {_,toggle}{viewex,tagex} {0-8}

super + 0
	dwmc viewall

super + {minus,plus}
	dwmc setgaps {-,+}5

super + {_, shift} + g
    dwmc setgaps {10, 0}

super + shift + r
    xrdb -merge ${HOME}/.Xresources
    dwmc xrdb

super + button2
    dwmc resizemouse

